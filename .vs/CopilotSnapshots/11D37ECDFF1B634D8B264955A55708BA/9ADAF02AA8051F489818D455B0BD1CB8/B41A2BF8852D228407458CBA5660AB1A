.chart-container {
  width: 100%;
  height: 600px;
  background-color: #0d1117;
  border-radius: 8px;
  padding: 0.5rem;
  cursor: crosshair;
  position: relative;
  touch-action: none; /* Prevent default touch behaviors */
  user-select: none;

  &:active {
    cursor: grabbing;
  }

  canvas {
    width: 100% !important;
    height: 100% !important;
  }

  // Touch overlay for visual feedback
  .touch-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    background: rgba(38, 166, 154, 0.1);
    border-radius: 8px;
    transition: opacity 0.2s ease;

    .gesture-indicator {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: #26a69a;
      font-size: 2rem;
      font-weight: bold;
      text-shadow: 0 0 10px rgba(38, 166, 154, 0.5);

      &.horizontal-swipe::before {
        content: "↔";
      }

      &.vertical-swipe::before {
        content: "↕";
      }

      &.pinch-zoom::before {
        content: "⟷";
      }
    }
  }

  // Zoom control buttons
  .zoom-controls {
    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    flex-direction: column;
    gap: 5px;
    z-index: 10;

    .zoom-btn {
      width: 35px;
      height: 35px;
      background: rgba(42, 42, 42, 0.9);
      border: 1px solid #555;
      border-radius: 6px;
      color: #aaa;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
      backdrop-filter: blur(5px);

      &:hover {
        background: rgba(38, 166, 154, 0.8);
        color: white;
        border-color: #26a69a;
        transform: scale(1.05);
      }

      &:active {
        transform: scale(0.95);
        background: rgba(38, 166, 154, 1);
      }

      // Hide on small screens to save space
      @media (max-width: 768px) {
        width: 30px;
        height: 30px;
        font-size: 14px;
      }

      @media (max-width: 480px) {
        display: none;
      }
    }
  }
}

// Mobile-specific touch styles
@media (max-width: 768px) {
  .chart-container {
    height: 400px;
    padding: 0.25rem;

    .touch-overlay .gesture-indicator {
      font-size: 1.5rem;
    }
  }
}

// Tablet landscape
@media (min-width: 769px) and (max-width: 1024px) {
  .chart-container {
    height: 500px;
  }
}

// Desktop
@media (min-width: 1025px) {
  .chart-container {
    height: 650px;

    // Show additional cursor hints on desktop
    &[data-gesture="horizontal"] {
      cursor: ew-resize;
    }

    &[data-gesture="vertical"] {
      cursor: ns-resize;
    }
  }
}

// High-DPI displays
@media (-webkit-min-device-pixel-ratio: 2),
  (min-resolution: 192dpi) {
  .chart-container canvas {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }
}
