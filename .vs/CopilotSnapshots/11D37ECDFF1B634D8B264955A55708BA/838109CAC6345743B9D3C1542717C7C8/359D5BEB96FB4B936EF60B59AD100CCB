/* eslint-disable @typescript-eslint/no-explicit-any */
import { CommonModule } from '@angular/common';
import { Component, OnInit, ViewChild, ElementRef } from '@angular/core';
import { NgChartsModule, BaseChartDirective } from 'ng2-charts';
import {
  Chart as ChartJS,
  TimeScale,
  LinearScale,
  Tooltip,
  Title,
  Legend,
} from 'chart.js';
import {
  CandlestickController,
  CandlestickElement,
} from 'chartjs-chart-financial';
import zoomPlugin from 'chartjs-plugin-zoom';
import 'chartjs-adapter-date-fns';
import { MarketService } from '../../modules/shared/http/market.service';

//
// 📍 Crosshair plugin for better interactivity
//
const crosshairPlugin = {
  id: 'crosshair',
  afterDraw(chart: any): void {
    if (chart.tooltip?._active?.length) {
      const ctx = chart.ctx;
      const x = chart.tooltip._active[0].element.x;
      const y = chart.tooltip._active[0].element.y;

      ctx.save();
      ctx.beginPath();
      // vertical line
      ctx.moveTo(x, chart.chartArea.top);
      ctx.lineTo(x, chart.chartArea.bottom);
      // horizontal line
      ctx.moveTo(chart.chartArea.left, y);
      ctx.lineTo(chart.chartArea.right, y);

      ctx.lineWidth = 1;
      ctx.setLineDash([4, 4]);
      ctx.strokeStyle = '#555';
      ctx.stroke();
      ctx.restore();
    }
  },
};

//
// 📍 Register Chart.js controllers and plugins
//
ChartJS.register(
  TimeScale,
  LinearScale,
  Tooltip,
  Title,
  Legend,
  CandlestickController,
  CandlestickElement,
  zoomPlugin,
  crosshairPlugin,
);

@Component({
  selector: 'app-chart-simple',
  standalone: true,
  imports: [CommonModule, NgChartsModule],
  templateUrl: 'chart-simple-component.html',
  styleUrls: ['chart-simple-component.scss'],
})
export class ChartSimpleComponent implements OnInit {
  @ViewChild(BaseChartDirective) chart?: BaseChartDirective;
  @ViewChild('chartCanvas', { read: ElementRef }) chartCanvas?: ElementRef;

  chartData: any = { datasets: [] };

  // Touch/gesture tracking
  isInteracting = false;
  gestureType: 'horizontal' | 'vertical' | 'pinch' | null = null;
  private touchStart: { x: number; y: number; time: number } | null = null;
  private mouseStart: { x: number; y: number; time: number } | null = null;
  private lastTouches: TouchList | null = null;
  private currentZoomState = { x: { min: null, max: null }, y: { min: null, max: null } };

  //
  // 📊 Chart options with zoom, pan, crosshair, and nice defaults
  //
  chartOptions: any = {
    responsive: true,
    maintainAspectRatio: false,
    interaction: {
      mode: 'nearest',
      intersect: false,
      axis: 'x',
    },
    plugins: {
      legend: { display: false },
      tooltip: {
        enabled: window.innerWidth > 768, // only desktop
        mode: 'index',
        intersect: false,
      },
      datalabels: { display: false },
      zoom: {
        pan: {
          enabled: true,
          mode: 'xy',
          overScaleMode: 'none',
        },
        zoom: {
          wheel: { enabled: true, speed: 0.05 },
          pinch: { enabled: true },
          drag: { enabled: true },
          mode: 'xy',
          overScaleMode: 'none',
          limits: {
            x: { minRange: 1000 },
            y: { minRange: 0.00001 },
          },

          // ✅ Auto-fit Y after zoom
          onZoomComplete: ({ chart, event }: { chart: any; event: any }) => {
            if (event?.type?.includes('touch')) return;

            requestAnimationFrame(() => {
              const xScale = chart.scales.x;
              const yScale = chart.scales.y;
              const data = chart.data.datasets[0]?.data || [];
              const visible = data.filter(
                (c: any) => c.x >= xScale.min && c.x <= xScale.max,
              );

              if (!visible.length) return;

              const highs = visible.map((c: any) => c.h);
              const lows = visible.map((c: any) => c.l);
              const maxY = Math.max(...highs);
              const minY = Math.min(...lows);
              const buffer = (maxY - minY) * 0.1;

              yScale.options.min = minY - buffer;
              yScale.options.max = maxY + buffer;
              chart.update('none');
            });
          },

          // ✅ NEW: Auto-fit Y after panning
          onPanComplete: ({ chart }: { chart: any }) => {
            requestAnimationFrame(() => {
              const xScale = chart.scales.x;
              const yScale = chart.scales.y;
              const data = chart.data.datasets[0]?.data || [];
              const visible = data.filter(
                (c: any) => c.x >= xScale.min && c.x <= xScale.max,
              );

              if (!visible.length) return;

              const highs = visible.map((c: any) => c.h);
              const lows = visible.map((c: any) => c.l);
              const maxY = Math.max(...highs);
              const minY = Math.min(...lows);
              const buffer = (maxY - minY) * 0.1;

              yScale.options.min = minY - buffer;
              yScale.options.max = maxY + buffer;
              chart.update('none');
            });
          },
        },
      },
    },
    scales: {
      x: {
        type: 'time',
        time: {
          unit: 'day',
          tooltipFormat: 'MMM dd',
          displayFormats: { day: 'MMM dd' },
        },
        grid: { color: '#2a2a2a', borderColor: '#555' },
        ticks: {
          color: '#aaa',
          autoSkip: true,
          maxTicksLimit: window.innerWidth < 500 ? 4 : 8,
        },
      },
      y: {
        position: 'right',
        beginAtZero: false,
        grid: { color: '#2a2a2a', borderColor: '#555' },
        ticks: {
          color: '#aaa',
          callback: (val: any) => Number(val).toFixed(6),
          maxTicksLimit: 12,
        },
        afterBuildTicks: (axis: any) =>
          (axis.ticks = axis.ticks.filter((_: any, i: number) => i % 2 === 0)),
      },
    },
    layout: { backgroundColor: '#0d1117' },
  };

  constructor(private marketService: MarketService) {}

  ngOnInit(): void {
    this.marketService.getSymbols().subscribe((symbols) => {
      if (symbols?.length) {
        const symbol = symbols[0].SymbolName;
        this.loadCandles(symbol);
      }
    });
  }

  //
  // 📈 Load 1000 candles, but initially display only 150
  //
  loadCandles(symbol: string): void {
    this.marketService.getCandles(symbol, '1d', 1000).subscribe((candles) => {
      const mapped = candles.map((c) => ({
        x: new Date(c.Time).getTime(),
        o: c.Open,
        h: c.High,
        l: c.Low,
        c: c.Close,
      }));

      if (!mapped.length) return;

      // ✅ Initial visible segment (last 150 candles)
      const visible = mapped.slice(-150);
      const xMin = visible[0].x;
      const xMax = visible[visible.length - 1].x;
      const yMin = Math.min(...visible.map((c) => c.l));
      const yMax = Math.max(...visible.map((c) => c.h));

      this.chartData = {
        datasets: [
          {
            label: `${symbol} 1D`,
            data: mapped,
            type: 'candlestick',
            borderColor: {
              up: '#26a69a',
              down: '#ef5350',
              unchanged: '#999',
            },
            backgroundColor: {
              up: '#26a69a',
              down: '#ef5350',
              unchanged: '#999',
            },
          },
        ],
      };

      setTimeout(() => {
        const chartRef = this.chart?.chart as any;
        if (!chartRef) return;

        // ✅ 1. Reset zoom cleanly
        chartRef.resetZoom();

        // ✅ 2. Apply fixed initial zoom window (last 150)
        chartRef.scales.x.options.min = xMin;
        chartRef.scales.x.options.max = xMax;

        // ✅ 3. Fit Y to the visible candles
        const yScale = chartRef.scales['y'];
        if (yScale?.options) {
          const buffer = (yMax - yMin) * 0.1;
          yScale.options.min = yMin - buffer;
          yScale.options.max = yMax + buffer;
        }

        // ✅ 4. Hard limit total pan/zoom bounds to full dataset
        const fullMin = mapped[0].x;
        const fullMax = mapped[mapped.length - 1].x;

        chartRef.options.plugins.zoom.limits = {
          ...chartRef.options.plugins.zoom.limits,
          x: { min: fullMin, max: fullMax, minRange: 1000 },
        };

        chartRef.update('none');
      }, 200);
    });
  }

  //
  // 🎯 Touch Event Handlers
  //
  onTouchStart(event: TouchEvent): void {
    event.preventDefault();
    this.isInteracting = true;
    
    if (event.touches.length === 1) {
      const touch = event.touches[0];
      this.touchStart = {
        x: touch.clientX,
        y: touch.clientY,
        time: Date.now()
      };
      this.gestureType = null;
    } else if (event.touches.length === 2) {
      this.gestureType = 'pinch';
      this.lastTouches = event.touches;
    }
  }

  onTouchMove(event: TouchEvent): void {
    event.preventDefault();
    
    if (!this.touchStart || !this.chart?.chart) return;

    const chartRef = this.chart.chart as any;
    
    if (event.touches.length === 1 && this.touchStart) {
      const touch = event.touches[0];
      const deltaX = touch.clientX - this.touchStart.x;
      const deltaY = touch.clientY - this.touchStart.y;
      
      // Determine gesture type based on dominant direction
      if (!this.gestureType) {
        if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > 10) {
          this.gestureType = 'horizontal';
        } else if (Math.abs(deltaY) > Math.abs(deltaX) && Math.abs(deltaY) > 10) {
          this.gestureType = 'vertical';
        }
      }

      // Apply gesture-specific zoom/pan
      if (this.gestureType === 'horizontal') {
        this.handleHorizontalSwipe(deltaX, chartRef);
      } else if (this.gestureType === 'vertical') {
        this.handleVerticalSwipe(deltaY, chartRef);
      }
    } else if (event.touches.length === 2 && this.lastTouches) {
      this.handlePinchZoom(event.touches, chartRef);
    }
  }

  onTouchEnd(event: TouchEvent): void {
    this.isInteracting = false;
    this.gestureType = null;
    this.touchStart = null;
    this.lastTouches = null;
    
    // Save current zoom state
    this.saveZoomState();
  }

  //
  // 🖱️ Mouse Event Handlers (for desktop)
  //
  onMouseDown(event: MouseEvent): void {
    if (event.button === 0) { // Left mouse button
      this.mouseStart = {
        x: event.clientX,
        y: event.clientY,
        time: Date.now()
      };
      this.isInteracting = true;
    }
  }

  onMouseMove(event: MouseEvent): void {
    if (!this.mouseStart || !this.chart?.chart) return;

    const chartRef = this.chart.chart as any;
    const deltaX = event.clientX - this.mouseStart.x;
    const deltaY = event.clientY - this.mouseStart.y;

    // Hold shift for horizontal zoom, ctrl for vertical zoom
    if (event.shiftKey) {
      this.gestureType = 'horizontal';
      this.handleHorizontalSwipe(deltaX, chartRef);
    } else if (event.ctrlKey) {
      this.gestureType = 'vertical';
      this.handleVerticalSwipe(deltaY, chartRef);
    }
  }

  onMouseUp(event: MouseEvent): void {
    this.isInteracting = false;
    this.gestureType = null;
    this.mouseStart = null;
    this.saveZoomState();
  }

  onWheel(event: WheelEvent): void {
    event.preventDefault();
    
    if (!this.chart?.chart) return;
    
    const chartRef = this.chart.chart as any;
    const zoomFactor = event.deltaY > 0 ? 0.9 : 1.1;

    if (event.shiftKey) {
      // Horizontal zoom with shift+wheel
      this.zoomHorizontal(zoomFactor, chartRef);
    } else {
      // Vertical zoom with wheel
      this.zoomVertical(zoomFactor, chartRef);
    }
  }

  //
  // 🎯 Gesture Handlers
  //
  private handleHorizontalSwipe(deltaX: number, chartRef: any): void {
    const sensitivity = 0.001;
    const zoomFactor = 1 + (deltaX * sensitivity);
    this.zoomHorizontal(zoomFactor, chartRef);
  }

  private handleVerticalSwipe(deltaY: number, chartRef: any): void {
    const sensitivity = 0.001;
    const zoomFactor = 1 - (deltaY * sensitivity);
    this.zoomVertical(zoomFactor, chartRef);
  }

  private handlePinchZoom(touches: TouchList, chartRef: any): void {
    if (!this.lastTouches || touches.length !== 2) return;

    const currentDistance = this.getTouchDistance(touches);
    const lastDistance = this.getTouchDistance(this.lastTouches);
    
    if (lastDistance > 0) {
      const zoomFactor = currentDistance / lastDistance;
      this.zoomBoth(zoomFactor, chartRef);
    }
    
    this.lastTouches = touches;
  }

  private getTouchDistance(touches: TouchList): number {
    const touch1 = touches[0];
    const touch2 = touches[1];
    return Math.sqrt(
      Math.pow(touch2.clientX - touch1.clientX, 2) +
      Math.pow(touch2.clientY - touch1.clientY, 2)
    );
  }

  //
  // 🔧 Zoom Control Methods
  //
  private zoomHorizontal(factor: number, chartRef: any): void {
    const xScale = chartRef.scales.x;
    if (!xScale) return;

    const range = xScale.max - xScale.min;
    const center = (xScale.max + xScale.min) / 2;
    const newRange = range / factor;

    xScale.options.min = center - newRange / 2;
    xScale.options.max = center + newRange / 2;
    
    this.constrainXScale(chartRef);
    chartRef.update('none');
  }

  private zoomVertical(factor: number, chartRef: any): void {
    const yScale = chartRef.scales.y;
    if (!yScale) return;

    const range = yScale.max - yScale.min;
    const center = (yScale.max + yScale.min) / 2;
    const newRange = range / factor;

    yScale.options.min = center - newRange / 2;
    yScale.options.max = center + newRange / 2;
    
    chartRef.update('none');
  }

  private zoomBoth(factor: number, chartRef: any): void {
    this.zoomHorizontal(factor, chartRef);
    this.zoomVertical(factor, chartRef);
  }

  private constrainXScale(chartRef: any): void {
    const xScale = chartRef.scales.x;
    const data = chartRef.data.datasets[0]?.data || [];
    
    if (!data.length) return;

    const dataMin = data[0].x;
    const dataMax = data[data.length - 1].x;
    
    if (xScale.options.min < dataMin) xScale.options.min = dataMin;
    if (xScale.options.max > dataMax) xScale.options.max = dataMax;
  }

  private saveZoomState(): void {
    if (!this.chart?.chart) return;
    
    const chartRef = this.chart.chart as any;
    this.currentZoomState = {
      x: { min: chartRef.scales.x?.min, max: chartRef.scales.x?.max },
      y: { min: chartRef.scales.y?.min, max: chartRef.scales.y?.max }
    };
  }

  private restoreZoomState(): void {
    if (!this.chart?.chart || !this.currentZoomState) return;
    
    const chartRef = this.chart.chart as any;
    
    if (this.currentZoomState.x.min !== null) {
      chartRef.scales.x.options.min = this.currentZoomState.x.min;
      chartRef.scales.x.options.max = this.currentZoomState.x.max;
    }
    
    if (this.currentZoomState.y.min !== null) {
      chartRef.scales.y.options.min = this.currentZoomState.y.min;
      chartRef.scales.y.options.max = this.currentZoomState.y.max;
    }
    
    chartRef.update('none');
  }

  //
  // 🎮 Public Control Methods
  //
  zoomIn(): void {
    if (!this.chart?.chart) return;
    this.zoomBoth(1.2, this.chart.chart);
  }

  zoomOut(): void {
    if (!this.chart?.chart) return;
    this.zoomBoth(0.8, this.chart.chart);
  }

  resetZoom(): void {
    const chartRef = this.chart?.chart as any;
    if (!chartRef) return;
    
    chartRef.resetZoom();
    this.currentZoomState = { x: { min: null, max: null }, y: { min: null, max: null } };
  }

  fitToData(): void {
    if (!this.chart?.chart) return;
    
    const chartRef = this.chart.chart as any;
    const data = chartRef.data.datasets[0]?.data || [];
    
    if (!data.length) return;

    const visible = data.slice(-150); // Show last 150 candles
    const xMin = visible[0].x;
    const xMax = visible[visible.length - 1].x;
    const yMin = Math.min(...visible.map((c: any) => c.l));
    const yMax = Math.max(...visible.map((c: any) => c.h));
    const buffer = (yMax - yMin) * 0.1;

    chartRef.scales.x.options.min = xMin;
    chartRef.scales.x.options.max = xMax;
    chartRef.scales.y.options.min = yMin - buffer;
    chartRef.scales.y.options.max = yMax + buffer;
    
    chartRef.update('none');
    this.saveZoomState();
  }

  //
  // 🔁 Double-click or double-tap to reset zoom
  //
  onChartDblClick(): void {
    this.resetZoom();
  }
}
