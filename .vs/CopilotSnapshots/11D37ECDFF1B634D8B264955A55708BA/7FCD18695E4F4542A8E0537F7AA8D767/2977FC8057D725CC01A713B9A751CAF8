.chart-container {
  width: 100%;
  height: 600px;
  background-color: #0d1117;
  border-radius: 8px;
  padding: 0;
  position: relative;
  overflow: hidden;

  // Prevent default touch behaviors for better control
  touch-action: none;
  user-select: none;
  -webkit-user-select: none;
  -webkit-touch-callout: none;

  // Cursor states based on gesture type
  cursor: grab;

  &.interacting {
    cursor: grabbing;
  }

  // Specific cursor hints for different gestures
  &[data-gesture='zoom-x'] {
    cursor: ew-resize;
  }

  &[data-gesture='zoom-y'] {
    cursor: ns-resize;
  }

  &[data-gesture='pan'] {
    cursor: grabbing;
  }

  canvas {
    width: 100% !important;
    height: 100% !important;
    display: block;
  }

  // Enhanced interaction feedback
  .interaction-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    display: flex;
    align-items: center;
    justify-content: center;

    &[data-gesture='zoom-x'] {
      background: linear-gradient(
        90deg,
        transparent 0%,
        rgba(38, 166, 154, 0.1) 50%,
        transparent 100%
      );
    }

    &[data-gesture='zoom-y'] {
      background: linear-gradient(
        0deg,
        transparent 0%,
        rgba(33, 150, 243, 0.1) 50%,
        transparent 100%
      );
    }

    &[data-gesture='pan'] {
      background: radial-gradient(
        circle at center,
        rgba(255, 193, 7, 0.05) 0%,
        transparent 50%
      );
    }

    &[data-gesture='pinch'] {
      background: radial-gradient(
        circle at center,
        rgba(156, 39, 176, 0.1) 0%,
        transparent 50%
      );
    }

    .gesture-indicator {
      background: rgba(13, 17, 23, 0.9);
      border: 1px solid rgba(85, 85, 85, 0.4);
      border-radius: 8px;
      padding: 8px 16px;
      backdrop-filter: blur(10px);

      .zoom-hint {
        color: #26a69a;
        font-size: 14px;
        font-weight: 500;
        white-space: nowrap;
        display: flex;
        align-items: center;
        gap: 6px;
      }
    }
  }

  // TradingView-style control panel
  .chart-controls {
    position: absolute;
    top: 12px;
    right: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 10;

    .zoom-group,
    .action-group {
      display: flex;
      flex-direction: column;
      gap: 4px;
      background: rgba(13, 17, 23, 0.95);
      border: 1px solid rgba(85, 85, 85, 0.3);
      border-radius: 6px;
      padding: 4px;
      backdrop-filter: blur(10px);
    }

    .control-btn {
      width: 32px;
      height: 32px;
      background: transparent;
      border: none;
      border-radius: 4px;
      color: #aaa;
      font-size: 16px;
      font-weight: 500;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.15s ease;
      position: relative;

      &:hover:not(:disabled) {
        background: rgba(38, 166, 154, 0.1);
        color: #26a69a;
        transform: scale(1.05);
      }

      &:active:not(:disabled) {
        background: rgba(38, 166, 154, 0.2);
        transform: scale(0.95);
      }

      &:disabled {
        opacity: 0.3;
        cursor: not-allowed;
      }

      // Button-specific styling
      &.zoom-in span {
        font-size: 18px;
        line-height: 1;
      }

      &.zoom-out span {
        font-size: 20px;
        line-height: 1;
      }

      &.fit-data span {
        font-size: 14px;
      }

      &.reset-zoom span {
        font-size: 14px;
      }
    }
  }

  // Enhanced instructions with mobile/desktop variants
  .instructions {
    position: absolute;
    bottom: 12px;
    left: 12px;
    opacity: 0.8;
    transition: opacity 0.3s ease;
    z-index: 5;

    &:hover {
      opacity: 1;
    }

    .instruction-group {
      display: flex;
      flex-direction: column;
      gap: 4px;

      &.desktop {
        display: none;
      }

      &.mobile {
        display: flex;
      }
    }

    .instruction-item {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 11px;
      color: #aaa;
      background: rgba(13, 17, 23, 0.85);
      padding: 4px 8px;
      border-radius: 4px;
      backdrop-filter: blur(5px);
      white-space: nowrap;

      .icon {
        font-size: 12px;
        width: 16px;
        text-align: center;
        flex-shrink: 0;
      }

      .text {
        font-size: 10px;
      }
    }
  }
}

// Mobile responsiveness
@media (max-width: 768px) {
  .chart-container {
    height: 400px;
    border-radius: 0;

    .chart-controls {
      top: 8px;
      right: 8px;

      .control-btn {
        width: 28px;
        height: 28px;
        font-size: 14px;

        &.zoom-in span {
          font-size: 16px;
        }

        &.zoom-out span {
          font-size: 18px;
        }

        &.fit-data span,
        &.reset-zoom span {
          font-size: 12px;
        }
      }
    }

    .instructions {
      bottom: 8px;
      left: 8px;

      .instruction-group.mobile {
        display: flex;
      }

      .instruction-group.desktop {
        display: none;
      }
    }

    .interaction-overlay .gesture-indicator {
      padding: 6px 12px;

      .zoom-hint {
        font-size: 12px;
      }
    }
  }
}

// Very small screens (phones in portrait)
